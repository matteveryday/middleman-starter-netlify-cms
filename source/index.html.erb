---
title: Kaldi- Middleman + Netlify CMS Example
---

<section class="hero" style="background-image: url(<%= data.pages.home.hero.image %>)">
  <div class="caption">
    <div class="row">
      <h1><%= data.pages.home.hero.title %></h1>
    </div>
  </div>
</section>
<section class="homepage-story">
  <div class="container">
    <div class="row">
      <div class="story-content">
      <%= markdown data.pages.home.story %>
      </div>
    </div>
  </div>
</section>

<section class="homepage-news news">
  <div class="container">
    <h2>News</h2>
    <div class="news-items">

    <% blog.articles.first(2).each do |article| %>
      <%= partial 'partials/news/news_item', :locals => { :article => article } %>
    <% end %>
    </div>
  </div>
</section>
